class Solution:
    def reverse(self, n: int) -> int:
        rev=0
        neg_flag = False
        if(x<0):
            neg_flag = True
            x = (x*-1)
        while(x!=0):
            last_no = x%10
            x = x//10
            rev = rev*10+last_no
        if(rev<(2**31)*-1 or rev>(2**31)-1):
            return 0
        if(neg_flag==True):
            return (-1*rev)
        else:
            return rev
      
